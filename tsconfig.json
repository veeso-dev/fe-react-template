{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ]
}